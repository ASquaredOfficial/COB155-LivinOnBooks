<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E4E4E4">

        <ImageView
            android:id="@+id/idListViewBookImage"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/idListViewBookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/idListViewBookImage"
            android:text="Book Title"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idListViewPublisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idListViewBookTitle"
            android:layout_toEndOf="@id/idListViewBookImage"
            android:text="Publisher, "
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/idListViewPublishDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idListViewBookTitle"
            android:layout_toEndOf="@id/idListViewPublisher"
            android:text="date"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/idListViewISBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idListViewPublisher"
            android:layout_toEndOf="@id/idListViewBookImage"
            android:text="ISBN_13: "
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/idListViewPageNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idListViewISBN"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@id/idListViewBookImage"
            android:text="Page count"
            android:textColor="@color/black"
            android:textSize="18sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
